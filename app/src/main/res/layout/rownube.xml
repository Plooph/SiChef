<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="14dp"
        card_view:cardElevation="1dp"
        android:layout_margin="2dp"
        card_view:cardUseCompatPadding="false"
        card_view:contentPadding="4dp"
        android:onClick="onClickNube">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="0dp"
                android:textAlignment="center"
                android:id="@+id/tvAutor"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:textColor="#FF5722"
                android:textSize="20sp"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp" card_view:srcCompat="@drawable/chef_hat_color"
                android:id="@+id/imageView4"
                card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/tvAutor" android:layout_marginTop="2dp"/>
        <TextView
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitleNube"
                card_view:layout_constraintStart_toEndOf="@+id/imageView4"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" android:textColor="#FF5722" android:textStyle="bold"
                card_view:layout_constraintTop_toBottomOf="@+id/tvAutor" android:layout_marginTop="2dp"/>
        <TextView
                android:text="@string/para_que_coman"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvcomensales"
                card_view:layout_constraintTop_toBottomOf="@+id/tvTitleNube" android:layout_marginTop="16dp"
                card_view:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>
        <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNumComensalesNube"
                card_view:layout_constraintBottom_toTopOf="@+id/tvRating"
                card_view:layout_constraintTop_toBottomOf="@+id/tvcomensales"
                card_view:layout_constraintStart_toEndOf="@+id/imageView4"
                card_view:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@string/molaria_poner_un_rating"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvRating"
                card_view:layout_constraintTop_toBottomOf="@+id/tvcomensales" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" card_view:layout_constraintStart_toEndOf="@+id/imageView4"
                card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintBottom_toBottomOf="parent" card_view:layout_constraintVertical_bias="0.8"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>